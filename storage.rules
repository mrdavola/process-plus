rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Videos: anyone can upload (guests included) and anyone can read
    match /videos/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Thumbnails: anyone can upload and read
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Fallback: read is public; write requires auth for all other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
